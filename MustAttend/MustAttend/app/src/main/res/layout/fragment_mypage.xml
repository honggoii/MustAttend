<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="359dp"
        android:layout_height="276dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/ReviewButton"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="96dp"
        android:background="@color/BASIC"
        android:text="예약 수락 및 거절"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChangeInfoButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/StoreButton"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/BASIC"
        android:text="가게 관리"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ReviewButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/ChangeInfoButton"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/BASIC"
        android:foregroundGravity="center_vertical|center"
        android:gravity="center|center_horizontal"
        android:text="개인 정보 수정"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563" />

    <Button
        android:id="@+id/ByeButton"
        android:layout_width="203dp"
        android:layout_height="43dp"
        android:layout_marginBottom="56dp"
        android:background="@color/colorPrimaryDark"
        android:text="회원탈퇴"
        android:textColor="@color/BASIC"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/LogputButton"
        android:layout_width="204dp"
        android:layout_height="43dp"
        android:layout_marginBottom="56dp"
        android:background="#0F4C81"
        android:text="로그아웃"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>